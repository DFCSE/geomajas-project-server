<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='resource' type='org.geomajas.puregwt.example.base.client.resource.ShowcaseResource'/>

	<ui:style>
		.green {
		    color: #337428;
			font-weight: bold;
			font-style: italic;
		}

	</ui:style>


	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:west size="400">
			<g:ScrollPanel>
				<g:HTMLPanel addStyleNames="{resource.css.sampleLeftLayout}">
					<h2>Coordinates:</h2>
					<div>world position: <g:Label styleName="{style.green}" ui:field="worldPos"/></div>
					<br/>
					<div>screen position:<g:Label styleName="{style.green}" ui:field="screenPos"/></div>
					<br/>
					<h2>Listener Event:</h2>
					<g:VerticalPanel ui:field="layerEventLayout" width="97%"/>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:SimplePanel addStyleNames="{resource.css.sampleContentLayout}">
				<g:ResizeLayoutPanel ui:field="mapPanel" width="100%" height="100%"/>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 