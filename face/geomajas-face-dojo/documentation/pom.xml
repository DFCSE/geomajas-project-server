<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-doc-parent</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>org.geomajas.documentation</groupId>
	<artifactId>geomajas-face-dojo-documentation</artifactId>
	<version>1.5.8-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Geomajas dojo face documentation</name>
	<description>Geomajas dojo face documentation</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>explode-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.geomajas.documentation</groupId>
									<artifactId>geomajas-jdocbook-style</artifactId>
									<version>1.0.2</version>
									<outputDirectory>${project.build.directory}/docbkx/html</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.geomajas</groupId>
									<artifactId>geomajas-dojo-simple</artifactId>
									<version>1.7.1</version>
									<classifier>sources</classifier>
									<outputDirectory>${project.build.directory}/extract/dojo-simple</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.geomajas</groupId>
									<artifactId>geomajas-dojo-example-war</artifactId>
									<version>1.7.1</version>
									<classifier>sources</classifier>
									<outputDirectory>${project.build.directory}/extract/dojo-example</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.geomajas</groupId>
									<artifactId>geomajas-dojo-example-modules-shrinksafe</artifactId>
									<version>1.7.1</version>
									<classifier>sources</classifier>
									<outputDirectory>${project.build.directory}/extract/dojo-shrinked</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<properties>
		<listing.sourceDirectory>${basedir}/..</listing.sourceDirectory>
	</properties>
	
</project>
