<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-parent</artifactId>
		<version>1.0.3</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geomajas.plugin</groupId>
	<artifactId>geomajas-plugin-google-all</artifactId>
	<version>1.8.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Geomajas Google layer plug-in</name>
	<description>Geomajas Google layer plug-in</description>

	<scm>
		<connection>scm:svn:https://svn.geomajas.org/majas/trunk/plugin/geomajas-layer-google</connection>
		<developerConnection>scm:svn:https://svn.geomajas.org/majas/trunk/plugin/geomajas-layer-google</developerConnection>
		<url>https://svn.geomajas.org/majas/trunk/plugin/geomajas-layer-google</url>
	</scm>

	<developers>
		<developer>
			<id>pieterdg</id>
			<name>Pieter De Graef</name>
			<email>pieter.degraef@geosparc.com</email>
			<roles>
				<role>Module maintainer</role>
			</roles>
		</developer>
		<developer>
			<id>jandm</id>
			<name>Jan De Moerloose</name>
			<email>jan.demoerloose@geosparc.com</email>
		</developer>
		<developer>
			<id>joachimvda</id>
			<name>Joachim Van der Auwera</name>
			<email>joachim@geosparc.com</email>
		</developer>
	</developers>

	<repositories>
		<repository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</pluginRepository>
	</pluginRepositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-backend</artifactId>
				<version>${google-layer-backend-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-layer-openstreetmap</artifactId>
				<version>${google-layer-osm-version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<modules>
		<module>google</module>
	</modules>

	<profiles>
		<profile>
			<id>documentation</id>
			<activation>
				<property>
					<name>!skipDocs</name>
				</property>
			</activation>
			<modules>
				<module>documentation</module>
			</modules>
		</profile>
	</profiles>

	<properties>
		<google-layer-backend-version>1.7.1</google-layer-backend-version>
		<google-layer-osm-version>1.8.0-SNAPSHOT</google-layer-osm-version>
	</properties>
	
</project>
