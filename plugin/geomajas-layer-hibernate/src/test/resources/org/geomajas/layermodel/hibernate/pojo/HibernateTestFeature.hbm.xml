<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.geomajas.layermodel.hibernate.pojo.HibernateTestFeature"
		table="pojo">

		<id column="id" name="id" type="java.lang.Long">
			<generator class="increment" />
		</id>

		<property column="textAttr" name="textAttr" type="java.lang.String" />
		<property column="intAttr" name="intAttr" type="java.lang.Integer" />
		<property column="floatAttr" name="floatAttr" type="java.lang.Float" />
		<property column="doubleAttr" name="doubleAttr" type="java.lang.Double" />
		<property column="booleanAttr" name="booleanAttr" type="java.lang.Boolean" />
		<property column="dateAttr" name="dateAttr" type="java.util.Date" />

		<many-to-one name="manyToOne"
			class="org.geomajas.layermodel.hibernate.pojo.HibernateTestManyToOne"
			column="manyToOne" cascade="all" />

		<set name="oneToMany" cascade="all,delete-orphan">
			<key column="oneToMany" />
			<one-to-many
				class="org.geomajas.layermodel.hibernate.pojo.HibernateTestOneToMany" />
		</set>

	</class>
</hibernate-mapping>