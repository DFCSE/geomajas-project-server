<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resource"
		type="org.geomajas.puregwt.widget.client.dialog.CloseableDialogBoxResource" />

	<g:HorizontalPanel width="100%">
		<g:cell verticalAlignment="">
			<g:HTMLPanel ui:field="titleElement" class="{resource.css.closeableDialogTitle}" />
		</g:cell>

		<g:cell>
			<g:Button ui:field="closeIcon" styleName="{resource.css.closeableDialogCloseIcon}" />
		</g:cell>
	</g:HorizontalPanel>

</ui:UiBinder> 
