	<bean name="layerInfo" class="org.geomajas.configuration.VectorLayerInfo">
		<property name="id" value="hibernateLayer" />
		<property name="crs" value="EPSG:4326"/>
		<property name="featureInfo" ref="featureInfo"/>
	</bean>

	<bean name="layer" class="org.geomajas.internal.layer.layertree.DefaultVectorLayer">
		<property name="layerInfo" ref="layerInfo"/>
		<property name="layerModel" ref="layerModel"/>
	</bean>

	<bean name="application" class="org.geomajas.configuration.ApplicationInfo" >
		<property name="layers">
			<list>
				<ref bean="layer" />
			</list>
		</property>
		<property name="interceptors">
			<list>
				<ref bean="hibernateTransactionInterceptor"/>
