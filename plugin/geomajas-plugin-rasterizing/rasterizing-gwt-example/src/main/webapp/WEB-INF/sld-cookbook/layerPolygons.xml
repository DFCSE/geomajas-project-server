<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<bean name="layerPolygons" class="org.geomajas.layer.shapeinmem.ShapeInMemLayer">
		<property name="layerInfo" ref="layerPolygonsInfo" />
        <property name="url" value="classpath:org/geomajas/context/sld/shapes/sld_cookbook_polygon.shp"/>
	</bean>

	<bean name="layerPolygonsInfo" class="org.geomajas.configuration.VectorLayerInfo">
		<property name="layerType" value="MULTIPOLYGON"/>
		<property name="crs" value="EPSG:4326"/>
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-180"/>
				<property name="y" value="-90"/>
				<property name="maxX" value="180"/>
				<property name="maxY" value="90"/>
			</bean>
		</property>
		<property name="featureInfo" ref="layerPolygonsFeatureInfo" />
		<property name="namedStyleInfos">
			<list>
				<ref bean="polygonAttributeBasedStyleInfo" />
				<ref bean="polygonGraphicFillStyleInfo" />
				<ref bean="polygonHatchingFillStyleInfo" />
				<ref bean="polygonLabelHaloStyleInfo" />
				<ref bean="polygonWithDefaultLabelStyleInfo" />
				<ref bean="polygonWithStyledLabelStyleInfo" />
				<ref bean="polygonSimplePolygonStyleInfo" />
				<ref bean="polygonSimplePolygonWithStrokeStyleInfo" />
				<ref bean="polygonZoomBasedPolygonStyleInfo" />
			</list>
		</property>
	</bean>

    <bean class="org.geomajas.configuration.FeatureInfo" name="layerPolygonsFeatureInfo">
        <property name="dataSourceName" value="sld_cookbook_polygon"/>
        <property name="identifier">
            <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                <property name="label" value="Gid"/>
                <property name="name" value="gid"/>
                <property name="type" value="LONG"/>
            </bean>
        </property>
        <property name="geometryType">
            <bean class="org.geomajas.configuration.GeometryAttributeInfo">
                <property name="name" value="the_geom"/>
                <property name="editable" value="false"/>
            </bean>
        </property>

        <property name="attributes">
            <list>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Name"/>
                    <property name="name" value="name"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="STRING"/>
                </bean>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Gid"/>
                    <property name="name" value="gid"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="LONG"/>
                </bean>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Population"/>
                    <property name="name" value="pop"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="LONG"/>
                </bean>
            </list>
        </property>
    </bean>
    
	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonAttributeBasedStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_attributebasedpolygon.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonGraphicFillStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_graphicfill.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonHatchingFillStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_hatchingfill.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonLabelHaloStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_labelhalo.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonWithDefaultLabelStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_polygonwithdefaultlabel.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonWithStyledLabelStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_polygonwithstyledlabel.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonSimplePolygonStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_simplepolygon.sld"/>
 	</bean>
	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonSimplePolygonWithStrokeStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_simplepolygonwithstroke.sld"/>
 	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="polygonZoomBasedPolygonStyleInfo">
		<property name="sldLocation" value="WEB-INF/sld-cookbook/sld/polygon_zoombasedpolygon.sld"/>
 	</bean>

</beans>
