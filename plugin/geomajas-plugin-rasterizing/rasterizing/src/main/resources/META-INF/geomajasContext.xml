<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:util="http://www.springframework.org/schema/util"
		xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd"
		>

	<bean class="org.geomajas.global.PluginInfo">
		<property name="version">
			<bean class="org.geomajas.global.PluginVersionInfo">
				<property name="name" value="rasterizing" />
				<property name="version" value="${project.version}" />
			</bean>
		</property>
		<property name="backendVersion" value="${rasterizing-backend-version}" />
		<property name="dependencies">
			<list>
				<bean class="org.geomajas.global.PluginVersionInfo">
					<property name="name" value="caching" />
					<property name="version" value="${rasterizing-caching-version}" />
				</bean>
			</list>
		</property>
		<property name="copyrightInfo">
			<list>
				<bean class="org.geomajas.global.CopyrightInfo">
					<property name="key" value="Geomajas"/>
					<property name="copyright" value="(c) 2008-2011 Geosparc nv"/>
					<property name="licenseName" value="GNU Affero General Public License, Version 3"/>
					<property name="licenseUrl" value="http://www.gnu.org/licenses/agpl-3.0.html"/>
				</bean>
			</list>
		</property>
	</bean>

	<!-- define pipelines for actual rasterizing -->

	<bean name="PIPELINE_RASTERIZING" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName" value="$PIPELINE_RASTERIZING"/>
		<property name="pipeline">
			<list>
				<bean class="org.geomajas.service.pipeline.PipelineHook">
					<property name="id" value="preRasterize" />
				</bean>
				<bean class="org.geomajas.plugin.rasterizing.RasterizeStep">
					<property name="id" value="RasterizeStep" />
				</bean>
				<bean class="org.geomajas.service.pipeline.PipelineHook">
					<property name="id" value="postRasterize" />
				</bean>
			</list>
		</property>
	</bean>

	<bean name="PIPELINE_RASTERIZING_CACHED" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName"><util:constant static-field="org.geomajas.plugin.rasterizing.api.RasterizingPipelineCode.PIPELINE_RASTERIZING_CACHED"/></property>
		<property name="delegatePipeline" ref="PIPELINE_RASTERIZING" />
		<property name="interceptors">
			<list>
				<bean
					class="org.geomajas.plugin.rasterizing.RasterizeCachingInterceptor">
					<property name="id" value="RasterizeCache" />
					<property name="stepId" value="RasterizeStep" />
				</bean>
			</list>
		</property>
	</bean>

	<!-- define pipelines for VectorLayerService -->

	<bean name="PIPELINE_GET_VECTOR_TILE_RASTER_URL" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName" value="$PIPELINE_GET_VECTOR_TILE_RASTER_URL" />
		<property name="delegatePipeline" ref="PIPELINE_GET_VECTOR_TILE" />
		<property name="extensions">
			<map>
				<entry key="postTileFill">
					<bean class="org.geomajas.plugin.rasterizing.RasterUrlStep" >
						<property name="id" value="RasterUrlStep" />
					</bean>
				</entry>
			</map>
		</property>
		<property name="interceptors">
			<list>
				<bean
					class="org.geomajas.internal.service.pipeline.SkipStepInterceptor">
					<property name="id" value="SkipTileStringContent" />
					<property name="stepId" value="GetTileStringContentStep" />
				</bean>
				<bean
					class="org.geomajas.plugin.rasterizing.RebuildCachingInterceptor">
					<property name="id" value="RebuildCache" />
					<property name="fromStepId" value="preTileFilter" />
					<property name="toStepId" value="postTileFill" />
				</bean>
			</list>
		</property>
	</bean>

	<bean name="PIPELINE_GET_VECTOR_TILE_RASTER_ALL" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName" value="$PIPELINE_GET_VECTOR_TILE_RASTER_ALL" />
		<property name="delegatePipeline" ref="PIPELINE_GET_VECTOR_TILE_RASTER_URL" />
		<property name="extensions">
			<map>
				<entry key="preTileFill">
					<bean class="org.geomajas.plugin.rasterizing.RasterTileStep" >
						<property name="id" value="RasterTileStep" />
					</bean>
				</entry>
			</map>
		</property>
		<property name="interceptors">
			<list>
				<bean
					class="org.geomajas.plugin.rasterizing.RasterTileCachingInterceptor">
					<property name="id" value="RasterTileCache" />
					<property name="stepId" value="RasterTileStep" />
				</bean>
			</list>
		</property>
	</bean>
	
	<!-- define cached pipelines for VectorLayerService -->

	<bean name="PIPELINE_GET_VECTOR_TILE_RASTER_URL_CACHED" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName" value="$PIPELINE_GET_VECTOR_TILE_RASTER_URL_CACHED" />
		<property name="delegatePipeline" ref="PIPELINE_GET_VECTOR_TILE_RASTER_URL" />
		<property name="interceptors">
			<list>
				<bean
					class="org.geomajas.plugin.rasterizing.GetTileAllCachingInterceptor">
					<property name="id" value="GetTileAllCache" />
					<property name="fromStepId" value="preTileFilter" />
					<property name="toStepId" value="RasterUrlStep" />
				</bean>
			</list>
		</property>
	</bean>

	<bean name="PIPELINE_GET_VECTOR_TILE_RASTER_ALL_CACHED" class="org.geomajas.service.pipeline.PipelineInfo">
		<property name="pipelineName" value="$PIPELINE_GET_VECTOR_TILE_RASTER_ALL_CACHED" />
		<property name="delegatePipeline" ref="PIPELINE_GET_VECTOR_TILE_RASTER_ALL" />
		<property name="interceptors">
			<list>
				<bean
					class="org.geomajas.plugin.rasterizing.GetTileAllCachingInterceptor">
					<property name="id" value="GetTileAllCache" />
					<property name="fromStepId" value="preTileFilter" />
					<property name="toStepId" value="RasterUrlStep" />
				</bean>
			</list>
		</property>
	</bean>
		
	
</beans>

