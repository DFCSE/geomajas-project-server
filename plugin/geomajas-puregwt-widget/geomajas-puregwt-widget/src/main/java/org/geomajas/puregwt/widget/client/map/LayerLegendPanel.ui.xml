<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.left {
			float: left;
		}
	</ui:style>

	<g:HTMLPanel styleName="gm-LayerLegendPanel">
		<g:CheckBox ui:field="visibilityToggle" styleName="gwt-CheckBox {style.left}" />
		<g:VerticalPanel styleName="{style.left}">
			<g:Label styleName="gm-LayerLegendPanel-title" ui:field="title" />
			<g:FlexTable ui:field="legendTable" />
		</g:VerticalPanel>
	</g:HTMLPanel>

</ui:UiBinder> 