<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.left {
			float: left;
		}
	</ui:style>

	<g:HTMLPanel styleName="gm-LegendDisclosurePanel">
		<g:HTML ui:field="title">
			<span ui:field="titleElement" />
			<span class="{style.left}" style="text-align:right;">
				<img ui:field="closureImageElement" />
			</span>
		</g:HTML>
		<g:ScrollPanel>
			<g:VerticalPanel ui:field="contentPanel" visible="false"></g:VerticalPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>

</ui:UiBinder> 