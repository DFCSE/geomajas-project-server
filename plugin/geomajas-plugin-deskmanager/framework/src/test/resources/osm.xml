<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Openstreetmaps layer -->	
	<bean class="org.geomajas.configuration.client.ClientRasterLayerInfo" 
		id="osmLayer">
		<property name="serverLayerId" value="osmLayerModel" />
		<property name="label" value="OpenStreetMap (raster)" />
		<property name="visible" value="true" />
		<property name="style" value="0.5" />
		<property name="widgetInfo">
			<map>
				<entry key="ExtraLayerInfo">
					<bean class="org.geomajas.widget.layer.configuration.client.ClientExtraLayerInfo">
						<property name="largeLayerIconUrl" value="rasterlayerIcons/osmLarge.jpg" />
						<property name="legendImageUrl" value="rasterlayerLegends/osm.jpg" />
						<property name="source" value="Open Streetmaps" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>
	
	<!-- Openstreetmaps voor overview!! -->
	<bean class="org.geomajas.configuration.client.ClientRasterLayerInfo"
		id="osmOverviewLayer">
		<property name="serverLayerId" value="osmLayerModel" />
		<property name="label" value="Openstreetmaps" />
		<property name="visible" value="true" />
		<property name="style" value="1" />
		<property name="userData">
			<bean class="org.geomajas.plugin.deskmanager.configuration.client.ExtraClientLayerInfo">
				<property name="systemLayer" value="true" /> <!-- This layer should not be used in loketbuilder -->
			</bean>
		</property>
	</bean>
	

	<bean name="osmLayerModel" class="org.geomajas.layer.osm.OsmLayer">
		<property name="layerInfo" ref="osmInfo" />
		<property name="maxZoomLevel" value="18" />
	</bean>

	<bean name="osmInfo" class="org.geomajas.configuration.RasterLayerInfo">
		<property name="layerType" value="RASTER" />
		<property name="crs" value="EPSG:3857" />
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-20037508.34" />
				<property name="y" value="-20037508.34" />
				<property name="width" value="40075016.68" />
				<property name="height" value="40075016.68" />
			</bean>
		</property>
	</bean>

</beans>
