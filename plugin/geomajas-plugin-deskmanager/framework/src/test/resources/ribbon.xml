
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">


	<bean name="ribbon-bar-default-pub"
		class="org.geomajas.widget.utility.configuration.RibbonBarInfo">
		<property name="groups">
			<list>
				<!-- NAVIGATIE RIBBON GROUP -->
				<bean class="org.geomajas.widget.utility.configuration.RibbonGroupInfo"
					name="ribbongroup-default-navigatie">
					<property name="title" value="Navigatie" />
					<property name="columns">
						<list>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="ZoomToRectangleMode" />
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionList" />
								<property name="tools">
									<list>
										<ref bean="ZoomPrevious" />
										<ref bean="ZoomNext" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>

				<!-- INFORMATIE RIBBON GROUP -->
				<bean class="org.geomajas.widget.utility.configuration.RibbonGroupInfo"
					name="ribbongroup-default-informatie">
					<property name="title" value="Informatie" />
					<property name="columns">
						<list>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="MultilayerFeatureInfoMode" />
									</list>
								</property>
								<property name="parameters">
									<list>
										<bean class="org.geomajas.configuration.Parameter">
											<property name="name" value="selected" />
											<property name="value" value="false" />
										</bean>
										<bean class="org.geomajas.configuration.Parameter">
											<property name="name" value="pixelTolerance" />
											<property name="value" value="10" />
										</bean>
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="TooltipOnMouseOverMode" />
									</list>
								</property>
								<property name="parameters">
									<list>
										<bean class="org.geomajas.configuration.Parameter">
											<property name="name" value="radioGroup" />
											<property name="value" value="TooltipOnMouseOverMode" />
										</bean>
										<bean class="org.geomajas.configuration.Parameter">
											<property name="name" value="selected" />
											<property name="value" value="true" />
										</bean>
										<bean class="org.geomajas.configuration.Parameter">
											<property name="name" value="pixelTolerance" />
											<property name="value" value="10" />
										</bean>
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="MeasureDistanceMode" />
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="MouseLocationColumn" />
							</bean>
						</list>
					</property>
				</bean>

				<!-- ALGEMEEN RIBBON GROUP -->
				<bean class="org.geomajas.widget.utility.configuration.RibbonGroupInfo"
					name="ribbongroup-default-algemeen">
					<property name="title" value="Algemeen" />
					<property name="columns">
						<list>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="SelectionMode" />
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="AddRemark" />
									</list>
								</property>
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="RefreshLayersButton" />
							</bean>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionButton" />
								<property name="tools">
									<list>
										<ref bean="ShowDefaultPrint" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>

				<!-- SEARCH RIBBON GROUP -->
				<bean class="org.geomajas.widget.utility.configuration.RibbonGroupInfo"
					name="ribbongroup-default-zoeken">
					<property name="title" value="Zoeken" />
					<property name="columns">
						<list>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ToolbarActionList" />
								<property name="tools">
									<list>
										<ref bean="SearchRuimtelijk" />
										<ref bean="SearchVrij" />
										<ref bean="SearchGecombineerd" />
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>

				<!-- NAVIGATIE RIBBON GROUP -->
				<bean class="org.geomajas.widget.utility.configuration.RibbonGroupInfo"
					name="ribbongroup-default-schaal">
					<property name="title" value="Schaal" />
					<property name="columns">
						<list>
							<bean
								class="org.geomajas.widget.utility.configuration.RibbonColumnInfo">
								<property name="type" value="ScaleSelectColumn" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>




</beans>