<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource' type='org.geomajas.puregwt.example.client.resource.ShowcaseResources' />

	<ui:style>
		.titleBar {
			border-bottom: 1px solid #337428;
			background-color: #337428;
		}

		.title {
			padding: 10px 20px 10px 20px;
			font-size: 20px;
			font-weight: bold;
			font-family: Arial, Verdana;
			color: #FFFFFF;
		}

		.leftPanel {
			width: 100%;
			height: 100%;
			background: #E0FFE0;
			background-image: -webkit-gradient(linear, left top, left bottom, from(#E0FFE0), to(#FFFFFF) );
			background-image: -moz-linear-gradient(top, #E0FFE0, #FFFFFF);
		}

		.contentPanel {
			width: 100%;
			height: 100%;
		}

		.viewMe {
			width: 100%;
			height: 100%;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' styleName='{style.viewMe}'>

		<!-- Banner -->
		<g:north size='53'>
			<g:HTMLPanel styleName='{style.titleBar}'>
				<table cellpadding='0' cellspacing='0' width='100%'>
					<tr>
						<td>
							<g:Image resource='{resource.geomajasLogo}' />
						</td>
						<td align='right' valign='bottom'>
							<div class='{style.title}'>
								<ui:msg key='mainTitle'>Showcase of Features</ui:msg>
							</div>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>

		<!-- Left menu -->
		<g:west size="250">
			<g:ScrollPanel addStyleNames='{style.leftPanel}'
				ui:field='leftPanel' />
		</g:west>

		<!-- Page layout -->
		<g:center>
			<g:ScrollPanel addStyleNames='{style.contentPanel}'
				ui:field='contentPanel' />
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder> 