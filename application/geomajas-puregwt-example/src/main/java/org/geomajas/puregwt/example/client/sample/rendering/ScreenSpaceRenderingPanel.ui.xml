<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.geomajas.puregwt.example.client.resource.ShowcaseResource' />

    <g:HTMLPanel width="100%" height="100%">
        <table cellpadding="0" cellspacing="10" width="100%" height="100%">
            <tr>
                <td class="{resource.css.sampleLeftLayout}">
                    <h2>Drawing options:</h2>
                    <g:VerticalPanel spacing="10">
                        <g:Button ui:field="circleBtn" width="180px">Draw circle</g:Button>
                        <g:Button ui:field="rectangleBtn" width="180px">Draw rectangle</g:Button>
                        <g:Button ui:field="textBtn" width="180px">Draw text</g:Button>
                        <g:Button ui:field="pathBtn" width="180px">Draw a path</g:Button>
                        <g:Button ui:field="deleteBtn" width="180px">Delete all</g:Button>
                    </g:VerticalPanel>
                </td>

                <td class="{resource.css.sampleContentLayout}">
                    <g:ResizeLayoutPanel ui:field="mapPanel" width="100%" height="100%" />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder> 