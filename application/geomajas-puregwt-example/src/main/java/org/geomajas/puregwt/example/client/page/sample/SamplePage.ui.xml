<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.puregwt.example.client.widget">

	<ui:with field="resource" type="org.geomajas.puregwt.example.client.resource.ShowcaseResource" />

	<ui:style>
		.headerLabel {
			color: #FFFFFF;
			font-weight: bold;
			font-size: 14px;
			line-height: 32px;
			padding: 0px 15px;
		}
		
		.backAnchor {
			margin: 5px;
			float: right;
			cursor: pointer;
		}
		
		.titleIcon {
			margin: 2px 5px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:north size="64">
			<g:HTMLPanel height="100%">
				<div class="{resource.css.subHeader}">
					<div ui:field="descriptionElement" style="padding: 10px 200px 10px 15px;"></div>
				</div>
			</g:HTMLPanel>
		</g:north>

		<g:center>
			<g:ResizeLayoutPanel addStyleNames="{resource.css.sampleLayout}">
				<g:ScrollPanel ui:field="contentPanel" width="100%" height="100%" />
			</g:ResizeLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 