<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
xmlns:m="urn:import:org.geomajas.puregwt.client.widget"
xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mapParent {
			border: 2px solid #C0C0C0;
		}
	</ui:style>

	<g:ResizeLayoutPanel width="100%" height="100%">
		<g:DockLayoutPanel unit="PX">
			<g:west size="300">
				<g:HTMLPanel>
					<h3>Printing demo</h3>
					<g:SimplePanel ui:field="printPanel" width="300px" height="400px"></g:SimplePanel>
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<m:MapLayoutPanel ui:field="mapPanel" addStyleNames="{style.mapParent}" />
			</g:center>
		</g:DockLayoutPanel>
	</g:ResizeLayoutPanel>

</ui:UiBinder> 