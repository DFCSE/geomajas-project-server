<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mapParent {
			border: 2px solid #C0C0C0;
		}
	</ui:style>

	<g:DockLayoutPanel width="100%" height="100%" unit="PX">
		<g:west size="300">
			<g:HTMLPanel>
				<h3>WMS Server</h3>
				<g:TextBox ui:field="urlBox" width="95%" />
				<g:Button ui:field="searchButton">Search for layers</g:Button>
				
				<h3>Add a layer</h3>
				<g:ValueListBox ui:field="layerBox" width="95%" />
				<g:Button ui:field="addButton">Add</g:Button>
			</g:HTMLPanel>
		</g:west>
		<g:center>
			<g:SimplePanel addStyleNames="{style.mapParent}" >
				<g:SimplePanel ui:field="mapPanel" width="100%" height="100%"/>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 