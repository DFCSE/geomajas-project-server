<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mapParent {
			border: 2px solid #C0C0C0;
		}
	</ui:style>

	<g:ResizeLayoutPanel width="100%" height="100%">
		<g:DockLayoutPanel unit="PX">
			<g:west size="300">
				<g:HTMLPanel>
					<h3>WMS Server</h3>
					<g:TextBox ui:field="urlBox" width="95%" />
					<g:Button ui:field="searchButton">Search for layers</g:Button>
					
					<h3>Add a layer</h3>
					<g:ValueListBox ui:field="layerBox" width="95%" />
					<g:Button ui:field="addButton">Add</g:Button>
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<g:SimpleLayoutPanel addStyleNames="{style.mapParent}" >
					<g:SimpleLayoutPanel ui:field="mapPanel"/>
				</g:SimpleLayoutPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:ResizeLayoutPanel>

</ui:UiBinder> 