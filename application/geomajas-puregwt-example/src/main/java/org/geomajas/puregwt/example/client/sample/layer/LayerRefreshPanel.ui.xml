<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.geomajas.puregwt.example.client.resource.ShowcaseResource' />

    <g:HTMLPanel width="100%" height="100%">
        <table cellpadding="0" cellspacing="10" width="100%" height="100%">
            <tr>
                <td class="{resource.css.sampleLeftLayout}">
                    <h2>Available layers:</h2>
                    <g:VerticalPanel ui:field="layerBtnLayout" width="100%" addStyleNames="{resource.css.sampleHasBorder}" />

                    <h2>Event:</h2>
                    <g:VerticalPanel ui:field="layerEventLayout" width="100%" />
                </td>

                <td class="{resource.css.sampleContentLayout}">
                    <g:ResizeLayoutPanel ui:field="mapPanel" width="100%" height="100%" />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder> 