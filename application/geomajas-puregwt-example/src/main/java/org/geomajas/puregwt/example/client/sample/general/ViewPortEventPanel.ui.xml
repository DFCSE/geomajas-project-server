<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.geomajas.puregwt.example.client.resource.ShowcaseResource' />

    <g:HTMLPanel width="100%" height="100%">
        <table cellpadding="0" cellspacing="10" width="100%" height="100%">
            <tr>
                <td class="{resource.css.sampleLeftLayout}">
                    <h2>Viewport manipulation:</h2>
                    <g:Button ui:field="enlargeMapBtn" width="200px">Enlarge map</g:Button>
                    <g:Button ui:field="shrinkMapBtn" width="200px">Enlarge map</g:Button>
                    <g:Button ui:field="clearEventsBtn" width="200px">Clear Events</g:Button>

                    <h2>Events:</h2>
                    <g:VerticalPanel ui:field="eventLayout" width="100%" />
                </td>

                <td class="{resource.css.sampleContentLayout}">
                    <g:ResizeLayoutPanel ui:field="mapPanel" width="100%" height="100%" />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder> 