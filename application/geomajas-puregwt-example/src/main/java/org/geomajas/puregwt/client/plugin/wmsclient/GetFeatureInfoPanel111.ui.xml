<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.mapParent {
			border: 2px solid #C0C0C0;
		}
	</ui:style>

	<g:ResizeLayoutPanel width="100%" height="100%">
		<g:DockLayoutPanel unit="PX">
			<g:south size="200">
				<g:HTMLPanel>
					<h3>HTML description:</h3>
					<g:ScrollPanel>
						<g:HTML ui:field="htmlDescription" />
					</g:ScrollPanel>
				</g:HTMLPanel>
			</g:south>
			<g:west size="300">
				<g:HTMLPanel>
					<h3>WMS GetFeatureInfo options</h3>
					<g:RadioButton name="type" ui:field="optionGeom" checked="true">Highlight the feature on the map</g:RadioButton>
					<br />
					<g:RadioButton name="type" ui:field="optionHtml">Show HTML description</g:RadioButton>
				</g:HTMLPanel>
			</g:west>
			<g:center>
				<g:SimpleLayoutPanel addStyleNames="{style.mapParent}" >
					<g:SimpleLayoutPanel ui:field="mapPanel"/>
				</g:SimpleLayoutPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:ResizeLayoutPanel>

</ui:UiBinder> 