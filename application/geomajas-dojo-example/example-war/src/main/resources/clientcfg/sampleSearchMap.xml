<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="sampleSearchMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillOpacity" value="0" />
				<property name="strokeColor" value="#FF6600" />
				<property name="strokeOpacity" value="1" />
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillColor" value="#FFFF00" />
				<property name="fillOpacity" value=".6" />
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillColor" value="#FFFF00" />
				<property name="fillOpacity" value=".6" />
			</bean>
		</property>
		<property name="crs" value="EPSG:4326" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="maximumScale" value="99999999" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-31.44" />
				<property name="y" value="-37.43" />
				<property name="width" value="89.83" />
				<property name="height" value="89.83" />
			</bean>
		</property>
		<property name="layers">
			<list>
				<ref bean="bluemarbleLayer" />
				<ref bean="countries110mAfricaLayer" />
			</list>
		</property>
		<property name="toolbar">
			<bean name="sampleSearchToolbar" class="org.geomajas.configuration.client.ClientToolbarInfo">
				<property name="tools">
					<list>
						<ref bean="ZoomIn" />
						<ref bean="ZoomOut" />
						<ref bean="ZoomToRectangleMode" />
						<ref bean="PanMode" />
						<ref bean="ToolbarSeparator" />
						<ref bean="ZoomPrevious" />
						<ref bean="ZoomNext" />
						<ref bean="ToolbarSeparator" />
						<ref bean="DeselectAll" />
						<ref bean="ToolbarSeparator" />
						<ref bean="FeatureInfoMode" />
					</list>
				</property>
			</bean>
		</property>
		<property name="layerTree">
			<bean name="sampleSearchTree" class="org.geomajas.configuration.client.ClientLayerTreeInfo">
				<property name="tools">
					<list>
						<ref bean="LayerVisibleTool" />
						<ref bean="LayerLabeledTool" />
					</list>
				</property>
				<property name="treeNode">
					<bean class="org.geomajas.configuration.client.ClientLayerTreeNodeInfo">
						<property name="label" value="Layers" />
						<property name="layers">
							<list>
								<ref bean="bluemarbleLayer" />
								<ref bean="countries110mAfricaLayer" />
							</list>
						</property>
						<property name="expanded" value="true" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="countries110mAfricaLayer">
		<property name="serverLayerId" value="countries110mAfrica" />
		<property name="label" value="Countries of Africa" />
		<property name="visible" value="true" />
		<property name="viewScaleMin" value="0" />
		<property name="viewScaleMax" value="100000" />
		<property name="namedStyleInfo" ref="countries110mAfricaStyleInfo" />
	</bean>

</beans>
