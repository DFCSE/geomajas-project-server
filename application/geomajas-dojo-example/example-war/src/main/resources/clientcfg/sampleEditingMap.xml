<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="sampleEditingMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#E0E0E0" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillOpacity" value="0" />
				<property name="strokeColor" value="#DDEE00" />
				<property name="strokeOpacity" value="1" />
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillColor" value="#FFFF00" />
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="fillColor" value="#DDFF00" />
				<property name="fillOpacity" value=".7" />
			</bean>
		</property>
		<property name="crs" value="EPSG:4326" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="maximumScale" value="100000" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
                <property name="x" value="-105"/>
                <property name="y" value="35"/>
                <property name="width" value="40"/>
                <property name="height" value="20"/>
			</bean>
		</property>
		<property name="layers">
			<list>
				<ref bean="bluemarbleLayer" />
				<ref bean="lakes110mLayer" />
			</list>
		</property>
		<property name="toolbar">
			<bean name="sampleEditingMapToolbar" class="org.geomajas.configuration.client.ClientToolbarInfo">
				<property name="tools">
					<list>
						<ref bean="ZoomIn" />
						<ref bean="ZoomOut" />
						<ref bean="ZoomToRectangleMode" />
						<ref bean="PanMode" />
						<ref bean="ToolbarSeparator" />
						<ref bean="ZoomPrevious" />
						<ref bean="ZoomNext" />
						<ref bean="ToolbarSeparator" />
						<ref bean="DeselectAll" />
						<ref bean="ZoomToSelection" />
						<ref bean="EditMode" />
						<ref bean="SplitPolygonMode" />
						<ref bean="MergePolygonMode" />
					</list>
				</property>
			</bean>
		</property>
		<property name="layerTree">
			<bean name="sampleEditingTree" class="org.geomajas.configuration.client.ClientLayerTreeInfo">
				<property name="tools">
					<list>
						<ref bean="LayerVisibleTool" />
						<ref bean="LayerLabeledTool" />
						<ref bean="LayerSnappingTool" />
					</list>
				</property>
				<property name="treeNode">
					<bean class="org.geomajas.configuration.client.ClientLayerTreeNodeInfo">
						<property name="label" value="Layers" />
						<property name="layers">
							<list>
								<ref bean="bluemarbleLayer" />
								<ref bean="lakes110mLayer" />
							</list>
						</property>
						<property name="expanded" value="true" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="lakes110mLayer">
		<property name="serverLayerId" value="lakes110m" />
		<property name="label" value="Lakes (editable - polygon)" />
		<property name="visible" value="true" />
		<property name="viewScaleMin" value="0" />
		<property name="viewScaleMax" value="100000" />
		<property name="namedStyleInfo" ref="lakes110mStyleInfo" />
		<property name="snappingRules">
			<list>
				<bean class="org.geomajas.configuration.SnappingRuleInfo">
					<property name="distance" value="1" />
					<property name="type" value="NEAREST_POINT" />
					<property name="layerId" value="lakes110mLayer" />
				</bean>
			</list>
		</property>
	</bean>

</beans>
