<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd"
		>

	<bean name="riversInfo" class="org.geomajas.configuration.VectorLayerInfo">
	  	<property name="id" value="rivers"/>
	  	<property name="label" value="Rivers (editable - linestring)"/>
		<property name="visible" value="true"/>
		<property name="layerType" value="MULTILINESTRING"/>
		<property name="crs" value="EPSG:4326"/>
		<property name="viewScaleMin" value="0"/>
		<property name="viewScaleMax" value="100000"/>
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-85.05112877980659"/>
				<property name="y" value="-85.05112877980659"/>
				<property name="width" value="170.102257"/>
				<property name="height" value="170.102257"/>
			</bean>
		</property>
		<property name="maxTileLevel" value="16"/>
        <property name="labelAttribute">
            <bean class="org.geomajas.configuration.LabelAttributeInfo">
                <property name="labelAttributeName" value="NAME"/>
                <property name="fontStyle">
                    <bean class="org.geomajas.configuration.StyleInfo">
                        <property name="fillColor" value="#FFFFFF"/>
                        <property name="fillOpacity" value="1"/>
                    </bean>
                </property>
                <property name="backgroundStyle">
                    <bean class="org.geomajas.configuration.StyleInfo">
                        <property name="fillColor" value="#000000"/>
                        <property name="fillOpacity" value=".7"/>
                        <property name="strokeColor" value="#0000FF"/>
                        <property name="strokeOpacity" value="1"/>
                        <property name="strokeWidth" value="1"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="editPermissions">
            <bean class="org.geomajas.configuration.EditPermissionType">
                <property name="creatingAllowed" value="true"/>
                <property name="updatingAllowed" value="true"/>
                <property name="deletingAllowed" value="true"/>
            </bean>
        </property>
        <property name="featureInfo" ref="riversFeatureInfo" />
        <property name="snappingRules">
            <list>
                <bean class="org.geomajas.configuration.SnappingRuleInfo">
                    <property name="distance" value="500000"/>
                    <property name="type" value="NEAREST_POINT"/>
                    <property name="layer" value="rivers" />
                </bean>
            </list>
        </property>
        <property name="styleDefinitions">
            <list>
                <bean class="org.geomajas.configuration.StyleInfo">
                    <property name="id" value="1"/>
                    <property name="name" value="Rivers"/>
                    <property name="fillColor" value="#333399"/>
                    <property name="fillOpacity" value="0"/>
                    <property name="strokeColor" value="#333399"/>
                    <property name="strokeOpacity" value="0.8"/>
                    <property name="strokeWidth" value="2"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean class="org.geomajas.configuration.FeatureInfo" name="riversFeatureInfo">
         <property name="dataSourceName" value="Rivers"/>
         <property name="identifier">
             <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                 <property name="label" value="Id"/>
                 <property name="name" value="ID"/>
                 <property name="type" value="LONG"/>
             </bean>
         </property>
         <property name="geometryType">
             <bean class="org.geomajas.configuration.GeometricAttributeInfo">
                 <property name="name" value="the_geom"/>
                 <property name="editable" value="true"/>
             </bean>
         </property>
         <property name="attributes">
             <list>
                 <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                     <property name="label" value="Name"/>
                     <property name="name" value="NAME"/>
                     <property name="editable" value="true"/>
                     <property name="identifying" value="true"/>
                     <property name="type" value="STRING"/>
                     <property name="validator">
						 <bean class="org.geomajas.configuration.ValidatorInfo">
							<property name="toolTip" value="The name of the river."/>
							<property name="constraints">
								<list>
									<bean class="org.geomajas.configuration.NotNullConstraintInfo"/>
								</list>
							</property>
						</bean>
                      </property>
                 </bean>
                 <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                     <property name="label" value="System"/>
                     <property name="name" value="SYSTEM"/>
                     <property name="editable" value="true"/>
                     <property name="identifying" value="true"/>
                     <property name="type" value="STRING"/>
                     <property name="validator">
						 <bean class="org.geomajas.configuration.ValidatorInfo">
							<property name="toolTip" value="River system."/>
							<property name="constraints">
								<list>
									<bean class="org.geomajas.configuration.NotNullConstraintInfo"/>
								</list>
							</property>
						</bean>
                      </property>
                 </bean>
             </list>
         </property>
     </bean>

	<bean name="rivers" class="org.geomajas.layer.shapeinmem.ShapeInMemLayer">
		<property name="url" value="classpath:shapes/africa/Rivers.shp"/>
		<property name="layerInfo" ref="riversInfo" />
	</bean>

</beans>
