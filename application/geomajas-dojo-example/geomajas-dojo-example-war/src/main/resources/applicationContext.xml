    <bean name="ToolbarSeparator" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ToolbarSeparator"/>
    </bean>
    <bean name="ZoomIn" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomIn"/>
        <property name="parameters">
            <list>
                <bean class="org.geomajas.configuration.Parameter">
                    <property name="name" value="delta"/>
                    <property name="value" value="2"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean name="ZoomInMode" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomInMode"/>
        <property name="parameters">
            <list>
                <bean class="org.geomajas.configuration.Parameter">
                    <property name="name" value="delta"/>
                    <property name="value" value="2"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean name="ZoomOut" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomOut"/>
        <property name="parameters">
            <list>
                <bean class="org.geomajas.configuration.Parameter">
                    <property name="name" value="delta"/>
