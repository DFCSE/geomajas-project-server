    <bean name="application" class="org.geomajas.configuration.ApplicationInfo" >
        <property name="id" value="tutorial" />
        <property name="name" value="tutorial application" />
        <property name="layers">
            <list>
                <ref bean="belt"/>
                <ref bean="bluemarble"/>
                <ref bean="cities"/>
                <ref bean="countries"/>
                <ref bean="lakes"/>
                <ref bean="osm"/>
                <ref bean="provinces"/>
                <ref bean="rivers"/>
                <ref bean="roads"/>
                <ref bean="structures"/>
            </list>
        </property>
        <property name="maps">
            <list>
                <ref bean="sampleFeaturesMap"/>
                <ref bean="sampleEditingMap"/>
                <ref bean="sampleSearchMap"/>
                <ref bean="sampleFutureMap"/>
            </list>
        </property>
    </bean>
    
    <bean name="sampleFeaturesMap" class="org.geomajas.configuration.MapInfo">
        <property name="id" value="sampleFeaturesMap"/>
        <property name="backgroundColor" value="#FFFFFF" />
        <property name="lineSelectStyle">
            <bean class="org.geomajas.configuration.StyleInfo">
                <property name="fillOpacity" value="0" />
                <property name="strokeColor" value="#FF6600" />
                <property name="strokeOpacity" value="1" />
            </bean>
        </property>
        <property name="pointSelectStyle">
            <bean class="org.geomajas.configuration.StyleInfo">
                <property name="fillColor" value="#FFFF00" />
            </bean>
        </property>
        <property name="polygonSelectStyle">
            <bean class="org.geomajas.configuration.StyleInfo">
                <property name="fillColor" value="#FFFF00" />
                <property name="fillOpacity" value=".5" />
            </bean>
        </property>
        <property name="crs" value="EPSG:900913"/>
        <property name="scaleBarEnabled" value="true"/>
        <property name="panButtonsEnabled" value="true"/>
        <property name="maximumScale" value="9.5"/>
        <property name="initialBounds">
            <bean class="org.geomajas.geometry.Bbox">
                <property name="x" value="286075"/>
                <property name="y" value="6379447"/>
                <property name="width" value="500000"/>
                <property name="height" value="400000"/>
            </bean>
        </property>
		<property name="layers">
			<list>
				<ref bean="osmInfo"/>
				<ref bean="provincesInfo"/>
			</list>
		</property>
        <property name="toolbar">
            <bean class="org.geomajas.configuration.ToolbarInfo">
                <property name="id" value="sampleFeaturesMapToolbar"/>
                <property name="tools">
                    <list>
                        <ref bean="ZoomIn"/>
                        <ref bean="ZoomOut"/>
                        <ref bean="ZoomToRectangleMode"/>
                        <ref bean="PanMode"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="ZoomPrevious"/>
                        <ref bean="ZoomNext"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="SelectionMode"/>
                        <ref bean="DeselectAll"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="ShowDefaultPrint"/>
                        <ref bean="PrintMode"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="layerTree">
            <bean class="org.geomajas.configuration.LayerTreeInfo">
                <property name="id" value="sampleFeaturesTree"/>
                <property name="tools">
                    <list>
                        <ref bean="LayerVisibleTool"/>
                        <ref bean="LayerLabeledTool"/>
                    </list>
                </property>
				<property name="treeNode">
					<bean class="org.geomajas.configuration.LayerTreeNodeInfo">
						<property name="label" value="Layers" />
						<property name="layerIds">
							<list>
							  <value>osm</value>
							  <value>provinces</value>
							</list>
						</property>
						<property name="expanded" value="true" />
					</bean>
				</property>
            </bean>
        </property>
    </bean>
