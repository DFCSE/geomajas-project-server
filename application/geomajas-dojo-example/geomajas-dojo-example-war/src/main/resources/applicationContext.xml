                </bean>
            </list>
        </property>
    </bean>
    <bean name="ZoomPrevious" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomPrevious"/>
    </bean>
    <bean name="ZoomNext" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomNext"/>
    </bean>
    <bean name="ZoomToRectangleMode" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomToRectangleMode"/>
    </bean>
    <bean name="ZoomToSelection" class="org.geomajas.configuration.ToolInfo">
        <property name="id" value="ZoomToSelection"/>
    </bean>
