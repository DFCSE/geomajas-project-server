    <bean name="MergePolygonMode" class="org.geomajas.configuration.ToolInfo" >
        <property name="id" value="MergePolygonMode"/>
    </bean>
    <bean name="NavigateMode" class="org.geomajas.configuration.ToolInfo" >
        <property name="id" value="NavigateMode"/>
