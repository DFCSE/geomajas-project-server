        </property>
        <property name="pointSelectStyle">
            <bean class="org.geomajas.configuration.StyleInfo">
                <property name="fillColor" value="#FFC000" />
            </bean>
        </property>
        <property name="polygonSelectStyle">
            <bean class="org.geomajas.configuration.StyleInfo">
                <property name="fillColor" value="#FFC000" />
                <property name="fillOpacity" value=".8" />
            </bean>
        </property>
        <property name="crs" value="EPSG:4326"/>
        <property name="scaleBarEnabled" value="true"/>
        <property name="panButtonsEnabled" value="true"/>
        <property name="displayUnitType" value="ENGLISH"/>
        <property name="maximumScale" value="99999999"/>
        <property name="initialBounds">
            <bean class="org.geomajas.geometry.Bbox">
                <property name="x" value="-31.44"/>
                <property name="y" value="-37.43"/>
                <property name="width" value="89.83"/>
                <property name="height" value="89.83"/>
            </bean>
        </property>
        <property name="resolutions">
            <!-- Using the NASA WMS resolutions -->
            <list>
                <value>0.5</value>
                <value>0.25</value>
                <value>0.125</value>
                <value>0.0625</value>
                <value>0.03125</value>
                <value>0.015625</value>
                <value>0.0078125</value>
                <value>0.00390625</value>
                <value>0.001953125</value>
                <value>0.0009765625</value>
                <value>0.00048828125</value>
                <value>0.000244140625</value>
                <value>0.000122070312</value>                            
            </list>
        </property>
		<property name="layers">
			<list>
				<ref bean="bluemarbleInfo"/>
				<ref bean="beltInfo"/>
				<ref bean="riversInfo"/>
				<ref bean="lakesInfo"/>
				<ref bean="citiesInfo"/>
			</list>
		</property>
        <property name="toolbar">
            <bean class="org.geomajas.configuration.ToolbarInfo">
                <property name="id" value="sampleFutureToolbar"/>
                <property name="tools">
                    <list>
                        <ref bean="ZoomIn"/>
                        <ref bean="ZoomOut"/>
                        <ref bean="ZoomToRectangleMode"/>
                        <ref bean="PanMode"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="ZoomPrevious"/>
                        <ref bean="ZoomNext"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="ZoomToSelection"/>
                        <ref bean="PanToSelection"/>
                        <ref bean="SelectionMode"/>
                        <ref bean="DeselectAll"/>
                        <ref bean="ToolbarSeparator"/>
                        <ref bean="EditMode"/>
                        <ref bean="FeatureInfoMode"/>
                        <ref bean="MeasureDistanceMode"/>
                        <ref bean="ShowDefaultPrint"/>
                        <ref bean="PrintMode"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="layerTree">
            <bean class="org.geomajas.configuration.LayerTreeInfo">
                <property name="id" value="sampleFutureTree"/>
				<property name="treeNode">
					<bean class="org.geomajas.configuration.LayerTreeNodeInfo">
						<property name="label" value="Layers" />
						<property name="layerIds">
							<list>
							  <value>bluemarble</value>
							  <value>belt</value>
							  <value>rivers</value>
							  <value>lakes</value>
