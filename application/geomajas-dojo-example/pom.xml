<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geomajas</groupId>
	<artifactId>geomajas-dojo-example</artifactId>
	<version>1.7.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Geomajas dojo application example</name>
	<url>http://files.geomajas.org/maven/trunk/dojo-example</url>

    <distributionManagement>
        <repository>
            <id>Geomajas repository</id>
            <name>Mapping with Asynchronous Java and SVG</name>
            <url>file:/var/www/maven.geomajas.org/htdocs/repository</url>
        </repository>
        <site>
            <id>Geomajas project site</id>
            <name>Mapping with Asynchronous Java and SVG</name>
            <url>file:/var/www/files.geomajas.org/htdocs/maven/trunk/geomajas-dojo-example</url>
        </site>
    </distributionManagement>

	<repositories>
		<repository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</pluginRepository>
	</pluginRepositories>

	<modules>
		<module>geomajas-dojo-example-client</module>
		<module>${geomajas.modules.name}</module>
		<module>geomajas-dojo-example-war</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-layer-geotools</artifactId>
				<version>${geomajas-layer-geotools-version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-layer-openstreetmap</artifactId>
				<version>${geomajas-layer-openstreetmap-version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-layer-wms</artifactId>
				<version>${geomajas-layer-wms-version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-plugin-printing</artifactId>
				<version>${geomajas-plugin-printing-version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<!-- development profile, no shrinking -->
			<id>noshrink</id>
			<properties>
				<geomajas.modules.name>geomajas-dojo-example-modules</geomajas.modules.name>
			</properties>
		</profile>
		<profile>
			<!-- shrinking -->
			<id>shrink</id>
			<properties>
				<geomajas.modules.name>geomajas-dojo-example-modules-shrinksafe</geomajas.modules.name>
			</properties>
			<modules>
				<!-- include other module to assure version increased on release, doesn't really change anything -->
				<module>geomajas-dojo-example-modules</module>
			</modules>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
	</profiles>

	<properties>
		<geomajas-face-dojo-version>1.7.0-SNAPSHOT</geomajas-face-dojo-version>
		<geomajas-layer-geotools-version>1.6.0</geomajas-layer-geotools-version>
		<geomajas-layer-openstreetmap-version>1.6.0</geomajas-layer-openstreetmap-version>
		<geomajas-layer-wms-version>1.6.0</geomajas-layer-wms-version>
		<geomajas-plugin-printing-version>1.7.0-SNAPSHOT</geomajas-plugin-printing-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

</project>
