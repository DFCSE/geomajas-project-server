<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Map using vector layers, showing the town of Duisburg -->
	<bean name="legendMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="crs" value="EPSG:900913" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="maximumScale" value="9.5" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-5000000" />
				<property name="y" value="-6000000" />
				<property name="width" value="12000000" />
				<property name="height" value="12000000" />
			</bean>
		</property>
		<property name="layers">
			<list>
				<bean class="org.geomajas.configuration.client.ClientRasterLayerInfo" id="osmLegendLayer">
					<property name="serverLayerId" value="osm" />
					<property name="label" value="OpenStreetMap (raster)" />
					<property name="visible" value="true" />
					<property name="viewScaleMin" value="0" />
					<property name="viewScaleMax" value="50" />
					<property name="style" value="1" />
				</bean>
				<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="riversLegendLayer">
					<property name="serverLayerId" value="rivers" />
				  	<property name="label" value="Rivers (editable - linestring)"/>
					<property name="visible" value="true"/>
					<property name="viewScaleMin" value="0"/>
					<property name="viewScaleMax" value="100000"/>
					<property name="namedStyleInfo" ref="riversStyleInfo" />
				</bean>
				<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="lakesLegendLayer">
					<property name="serverLayerId" value="lakes" />
			        <property name="label" value="Lakes (editable - polygon)"/>
			        <property name="visible" value="true"/>
			        <property name="viewScaleMin" value="0"/>
			        <property name="viewScaleMax" value="100000"/>
					<property name="namedStyleInfo" ref="lakesStyleInfo" />
				</bean>
				<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="citiesLegendLayer">
					<property name="serverLayerId" value="cities" />
			        <property name="label" value="Cities (editable - point)"/>
			        <property name="visible" value="true"/>
			        <property name="viewScaleMin" value="0"/>
			        <property name="viewScaleMax" value="100000"/>
					<property name="namedStyleInfo" ref="citiesStyleInfo" />
				</bean>
			</list>
		</property>
	</bean>

</beans>
