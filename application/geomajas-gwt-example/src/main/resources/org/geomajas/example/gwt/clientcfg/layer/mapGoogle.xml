<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Beans sample -->
	<bean name="googleMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="crs" value="EPSG:900913" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="maximumScale" value="17" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="505500" />
				<property name="y" value="6588000" />
				<property name="width" value="2000" />
				<property name="height" value="2000" />
			</bean>
		</property>
        <property name="resolutions">
            <list>
                <value>156543.03</value>
                <value>78271.52</value>
                <value>39135.76</value>
                <value>19567.88</value>
                <value>9783.94</value>
                <value>4891.97</value>
                <value>2445.98</value>
                <value>1222.99</value>
                <value>611.49</value>
                <value>305.75</value>
                <value>152.874057</value>
                <value>76.4370283</value>
                <value>38.2185141</value>
                <value>19.1092571</value>
                <value>9.55462853</value>
                <value>4.77731427</value>
                <value>2.38865713</value>
                <value>1.19432857</value>
                <value>0.597164285</value>
                <value>0.2985821425</value>
				<value>0.14929107125</value>                
				<value>0.074645535625</value>                
				<value>0.0373227678125</value>                
            </list>
        </property>
		<property name="layers">
			<list>
				<bean class="org.geomajas.configuration.client.ClientRasterLayerInfo" id="googleLayer">
					<property name="serverLayerId" value="google" />
					<property name="label" value="Google layer" />
					<property name="visible" value="true" />
					<property name="viewScaleMin" value="0" />
					<property name="viewScaleMax" value="17" />
					<property name="style" value="1" />
				</bean>
			</list>
		</property>
	</bean>

</beans>
