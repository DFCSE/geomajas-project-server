<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="editLineLayerMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="strokeColor" value="#FFFF00" />
				<property name="strokeOpacity" value=".75" />
				<property name="fillOpacity" value="0" />
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="crs" value="EPSG:900913" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-8950000" />
				<property name="y" value="2980000" />
				<property name="width" value="16000" />
				<property name="height" value="8000" />
			</bean>
		</property>
		<property name="scaleConfiguration">
			<bean class="org.geomajas.configuration.client.ScaleConfigurationInfo">
				<property name="zoomLevels">
					<list>
						<value>1:156543.03</value>
						<value>1:78271.52</value>
						<value>1:39135.76</value>
						<value>1:19567.88</value>
						<value>1:9783.94</value>
						<value>1:4891.97</value>
						<value>1:2445.98</value>
						<value>1:1222.99</value>
						<value>1:611.49</value>
						<value>1:305.75</value>
						<value>1:152.874057</value>
						<value>1:76.4370283</value>
						<value>1:38.2185141</value>
						<value>1:19.1092571</value>
						<value>1:9.55462853</value>
						<value>1:4.77731427</value>
						<value>1:2.38865713</value>
						<value>1:1.19432857</value>
						<value>1:0.597164285</value>
						<value>1:0.2985821425</value>
						<value>1:0.14929107125</value>
						<value>1:0.074645535625</value>
						<value>1:0.0373227678125</value>
					</list>
				</property>
				<property name="scaleUnit" value="PIXEL_PER_UNIT" />
			</bean>
		</property>
		<property name="layers">
			<list>
				<ref bean="googleSatLayer" />
				<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="editableRoadtrl020Layer">
					<property name="serverLayerId" value="roadtrl020" />
					<property name="label" value="Roads" />
					<property name="visible" value="true" />
					<property name="maximumScale" value="1:27000" />
					<property name="minimumScale" value="1:500000000" />
					<property name="namedStyleInfo" ref="roadstrl020StyleInfo" />
					<property name="snappingRules">
						<list>
							<bean class="org.geomajas.configuration.SnappingRuleInfo">
								<property name="distance" value="1000" />
								<property name="type" value="NEAREST_POINT" />
								<property name="layerId" value="editableRoadtrl020Layer" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="toolbar">
			<bean name="editLineLayerMapToolbar" class="org.geomajas.configuration.client.ClientToolbarInfo">
				<property name="tools">
					<list>
						<ref bean="EditMode" />
					</list>
				</property>
			</bean>
		</property>
	</bean>

</beans>
