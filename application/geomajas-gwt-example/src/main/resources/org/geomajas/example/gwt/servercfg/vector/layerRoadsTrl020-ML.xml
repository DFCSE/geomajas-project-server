<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="roadstrl020MLInfo" class="org.geomajas.configuration.VectorLayerInfo">
		<property name="layerType" value="MULTILINESTRING" />
		<property name="crs" value="EPSG:4326" />
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-83.5" />
				<property name="y" value="25.25" />
				<property name="width" value="4.5" />
				<property name="height" value="2" />
			</bean>
		</property>
		<property name="featureInfo" ref="roadstrl020FeatureInfo" />
		<property name="namedStyleInfos">
			<list>
				<ref bean="roadstrl020StyleInfo" />
			</list>
		</property>
	</bean>

	<bean name="roadtrl020ML" class="org.geomajas.layer.shapeinmem.ShapeInMemLayer">
		<property name="url" value="classpath:org/geomajas/example/gwt/servercfg/vector/shapefile/nationalatlas/roadtrl020.shp" />
		<property name="layerInfo" ref="roadstrl020MLInfo" />
	</bean>

</beans>
