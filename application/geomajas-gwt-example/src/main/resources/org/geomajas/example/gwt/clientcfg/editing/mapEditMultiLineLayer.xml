<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="editMultiLineLayerMap" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
				<property name="strokeColor" value="#FFFF00" />
				<property name="strokeOpacity" value=".75" />
				<property name="fillOpacity" value="0" />
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="crs" value="EPSG:900913" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="maximumResolution" value="1:27000" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-8950000" />
				<property name="y" value="2980000" />
				<property name="width" value="16000" />
				<property name="height" value="8000" />
			</bean>
		</property>
        <property name="allowedResolutions">
            <list>
                <value>1:222000000</value>
                <value>1:111000000</value>
                <value>1:55000000</value>
                <value>1:28000000</value>
                <value>1:14000000</value>
                <value>1:7000000</value>
                <value>1:3000000</value>
                <value>1:2000000</value>
                <value>1:867000</value>
                <value>1:433000</value>
                <value>1:217000</value>
                <value>1:108000</value>
                <value>1:54000</value>
                <value>1:27000</value>
            </list>
        </property>
		<property name="layers">
			<list>
				<ref bean="googleSatLayer" />
				<bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="editableRoadtrl020LayerML">
					<property name="serverLayerId" value="roadtrl020ML" />
					<property name="label" value="Roads" />
					<property name="visible" value="true" />
			 		<property name="minimumResolution" value="1:27000" />
					<property name="maximumResolution" value="1:500000000" />
					<property name="namedStyleInfo" ref="roadstrl020StyleInfo" />
					<property name="snappingRules">
						<list>
							<bean class="org.geomajas.configuration.SnappingRuleInfo">
								<property name="distance" value="1000" />
								<property name="type" value="NEAREST_POINT" />
								<property name="layerId" value="editableRoadtrl020LayerML" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="toolbar">
			<bean name="editMultiLineLayerMapToolbar" class="org.geomajas.configuration.client.ClientToolbarInfo">
				<property name="tools">
					<list>
						<ref bean="EditMode" />
					</list>
				</property>
			</bean>
		</property>
	</bean>

</beans>
