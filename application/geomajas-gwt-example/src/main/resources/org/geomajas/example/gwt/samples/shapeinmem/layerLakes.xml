<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd"
        >

    <bean name="lakesInfo" class="org.geomajas.configuration.VectorLayerInfo">
        <property name="layerType" value="POLYGON"/>
        <property name="crs" value="EPSG:4326"/>
        <property name="maxExtent">
            <bean class="org.geomajas.geometry.Bbox">
                <property name="x" value="-85.05112877980659"/>
                <property name="y" value="-85.05112877980659"/>
                <property name="width" value="170.102257"/>
                <property name="height" value="170.102257"/>
            </bean>
        </property>
		<property name="featureInfo" ref="lakesFeatureInfo" />
		<property name="namedStyleInfos">
			<list>
				<ref bean="lakesStyleInfo" />
			</list>
		</property>
	</bean>

    <bean class="org.geomajas.configuration.FeatureInfo" name="lakesFeatureInfo">
        <property name="dataSourceName" value="Lakes"/>
        <property name="identifier">
            <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                <property name="label" value="Id"/>
                <property name="name" value="ID"/>
                <property name="type" value="LONG"/>
            </bean>
        </property>
        <property name="geometryType">
            <bean class="org.geomajas.configuration.GeometryAttributeInfo">
                <property name="name" value="the_geom"/>
                <property name="editable" value="true"/>
            </bean>
        </property>
        <property name="attributes">
            <list>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Name"/>
                    <property name="name" value="NAME"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="STRING"/>
                    <property name="validator">
						<bean class="org.geomajas.configuration.validation.ValidatorInfo">
						   <property name="toolTip" value="The name of the lake."/>
						   <property name="constraints">
							   <list>
								   <bean class="org.geomajas.configuration.validation.NotNullConstraintInfo"/>
							   </list>
						   </property>
					   </bean>
                     </property>
                </bean>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Surface elevation"/>
                    <property name="name" value="SURF_ELEV"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="INTEGER"/>
                    <property name="validator">
						<bean class="org.geomajas.configuration.validation.ValidatorInfo">
						   <property name="toolTip" value="The lakes' surface elevation (in meter)."/>
						   <property name="constraints">
							   <list>
								   <bean class="org.geomajas.configuration.validation.NotNullConstraintInfo"/>
							   </list>
						   </property>
					   </bean>
                    </property>
                </bean>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Depth"/>
                    <property name="name" value="DEPTH"/>
                    <property name="editable" value="true"/>
                    <property name="identifying" value="true"/>
                    <property name="type" value="INTEGER"/>
                    <property name="validator">
						<bean class="org.geomajas.configuration.validation.ValidatorInfo">
						   <property name="toolTip" value="The lakes' depth (in meter)."/>
						   <property name="constraints">
							   <list>
								   <bean class="org.geomajas.configuration.validation.NotNullConstraintInfo"/>
								   <bean class="org.geomajas.configuration.validation.MinConstraintInfo">
									   <property name="value" value="0"/>
								   </bean>
							   </list>
						   </property>
					   </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" name="lakesStyleInfo">
		<property name="featureStyles">
            <list>
                <bean class="org.geomajas.configuration.FeatureStyleInfo">
                    <property name="name" value="Lakes"/>
                    <property name="fillColor" value="#333399"/>
                    <property name="fillOpacity" value=".8"/>
                    <property name="strokeColor" value="#333399"/>
                    <property name="strokeOpacity" value="0"/>
                    <property name="strokeWidth" value="1"/>
                </bean>
            </list>
		</property>
		<property name="labelStyle">
			<bean class="org.geomajas.configuration.LabelStyleInfo">
                <property name="labelAttributeName" value="NAME"/>
                <property name="fontStyle">
                    <bean class="org.geomajas.configuration.FeatureStyleInfo">
                        <property name="fillColor" value="#FFFFFF"/>
                        <property name="fillOpacity" value="1"/>
                    </bean>
                </property>
                <property name="backgroundStyle">
                    <bean class="org.geomajas.configuration.FeatureStyleInfo">
                        <property name="fillColor" value="#000000"/>
                        <property name="fillOpacity" value=".7"/>
                        <property name="strokeColor" value="#0000FF"/>
                        <property name="strokeOpacity" value="1"/>
                        <property name="strokeWidth" value="1"/>
                    </bean>
                </property>
			</bean>
		</property>
	</bean>

    <bean name="lakes" class="org.geomajas.layer.shapeinmem.ShapeInMemLayer">
		<property name="layerInfo" ref="lakesInfo"/>
        <property name="url" value="classpath:org/geomajas/example/gwt/samples/shapeinmem/shapes/Lakes.shp"/>
    </bean>

</beans>
