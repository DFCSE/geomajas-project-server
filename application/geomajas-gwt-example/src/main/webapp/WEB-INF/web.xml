<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>Geomajas GWT face example application</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            <!-- Server side raster layers -->
			classpath:org/geomajas/example/gwt/servercfg/**/*.xml

            <!-- Map Configurations -->
			classpath:org/geomajas/example/gwt/clientcfg/**/*.xml

			classpath:org/geomajas/plugin/caching/DefaultCachedPipelines.xml
			<!--
			classpath:org/geomajas/plugin/rasterizing/DefaultCachedAndRasterizedPipelines.xml
			-->
			<!--
			classpath:org/geomajas/spring/testRecorder.xml
			-->
       </param-value>
    </context-param>

	<!-- @extract-start PreloadToPrepareScanning, Preload class to prevent scanning problems -->
    <context-param>
        <param-name>preloadClasses</param-name>
        <param-value>
			org.geomajas.command.general.LogCommand
			org.geomajas.spring.GeomajasBeanNameGenerator
			org.hibernate.validator.engine.ValidatorImpl
			org.geomajas.plugin.staticsecurity.command.dto.LoginRequest
			org.geotools.data.shapefile.ShapefileDataStoreFactory
 			org.geomajas.gwt.client.Geomajas
 			org.geomajas.example.gwt.client.GeomajasSamples
 			org.geomajas.layer.geotools.GeoToolsLayer
 			org.geomajas.layer.hibernate.HibernateLayer
 			org.geomajas.layer.osm.OsmLayer
 			org.geomajas.layer.wms.WmsLayer
 			org.geotools.referencing.crs.EPSGCRSAuthorityFactory
			org.springframework.transaction.config.TxNamespaceHandler
			org.geomajas.plugin.printing.command.dto.PrintGetTemplateRequest
			org.geomajas.plugin.geocoder.service.SplitCommaReverseService
			org.geomajas.plugin.caching.service.CacheService
			org.geomajas.plugin.geocoder.api.GeocoderInfo
       </param-value>
    </context-param>

	<listener>
 		<listener-class>org.geomajas.servlet.PrepareScanningContextListener</listener-class>
	</listener>
	<!-- @extract-end -->
	
	<listener>
 		<listener-class>org.geomajas.servlet.GeomajasContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>JettyFilter</filter-name>
		<filter-class>org.geomajas.servlet.JettyThreadParentFilter</filter-class>
	</filter>

	<filter>
	    <filter-name>CacheFilter</filter-name>
	    <filter-class>org.geomajas.servlet.CacheFilter</filter-class>
		<!-- these are the default settings, mentioned as example -->
		<init-param>
			<param-name>cacheDurationInSeconds</param-name>
			<param-value>31536000</param-value>
			<description>Time that cache stuff should be cached, defaults to 1 year.</description>
		</init-param>
		<init-param>
			<param-name>skipPrefixes</param-name>
			<param-value>/d/</param-value>
			<description>All uris which start with one of these prefixes remain untouched.</description>
		</init-param>
		<init-param>
			<param-name>cacheIdentifiers</param-name>
			<param-value>.cache.</param-value>
			<description>When the uri contains one of these, the cache headers are added.</description>
		</init-param>
		<init-param>
			<param-name>cacheSuffixes</param-name>
			<param-value>.js .png .jpg .jpeg .gif .css .html</param-value>
			<description>When the uri ends in one of these, the cache headers are added.</description>
		</init-param>
		<init-param>
			<param-name>noCacheIdentifiers</param-name>
			<param-value>.nocache.</param-value>
			<description>When the uri contains one of these, the cache headers are removed.</description>
		</init-param>
		<init-param>
			<param-name>noCacheSuffixes</param-name>
			<param-value></param-value>
			<description>When the uri end in one of these, the cache headers are removed.</description>
		</init-param>
		<init-param>
			<param-name>zipSuffixes</param-name>
			<param-value>.js .css .html</param-value>
			<description>When the uri ends in one of these, the response is gzip compressed.</description>
		</init-param>
	</filter>

	<filter-mapping>
	    <filter-name>CacheFilter</filter-name>
	    <url-pattern>*</url-pattern>  
	</filter-mapping>

	<servlet>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<servlet-class>org.geomajas.gwt.server.GeomajasServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:META-INF/geomajasWebContext.xml</param-value>
			<description>Spring Web-MVC specific (additional) context files.</description>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<url-pattern>/org.geomajas.example.gwt.GeomajasSamples/geomajasService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/d/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>samples.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>

