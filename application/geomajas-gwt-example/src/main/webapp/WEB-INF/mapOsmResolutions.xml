<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- OpenStreetMap sample -->
	<bean name="mapOsmResolutions" class="org.geomajas.configuration.client.ClientMapInfo">
		<property name="backgroundColor" value="#FFFFFF" />
		<property name="lineSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="pointSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="polygonSelectStyle">
			<bean class="org.geomajas.configuration.FeatureStyleInfo">
			</bean>
		</property>
		<property name="crs" value="EPSG:900913" />
		<property name="scaleBarEnabled" value="true" />
		<property name="panButtonsEnabled" value="true" />
		<property name="initialBounds">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-20026376.393709917" />
				<property name="y" value="-20026376.393709917" />
				<property name="width" value="40052752.787419834" />
				<property name="height" value="40052752.787419834" />
			</bean>
		</property>
		<property name="layers">
			<list>
				<ref bean="osmLayer" />
			</list>
		</property>
		<property name="scaleConfiguration">
			<bean class="org.geomajas.configuration.client.ScaleConfigurationInfo">
				<property name="zoomLevels">
					<list>
						<value>1:444000000</value>
						<value>1:222000000</value>
						<value>1:111000000</value>
						<value>1:55000000</value>
						<value>1:28000000</value>
						<value>1:14000000</value>
						<value>1:7000000</value>
						<value>1:3000000</value>
						<value>1:2000000</value>
						<value>1:867000</value>
						<value>1:433000</value>
						<value>1:217000</value>
						<value>1:108000</value>
						<value>1:54000</value>
						<value>1:27000</value>
						<value>1:14000</value>
						<value>1:6771</value>
						<value>1:3385</value>
						<value>1:1693</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>

</beans>
