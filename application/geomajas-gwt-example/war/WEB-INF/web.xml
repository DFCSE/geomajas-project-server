<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>Geomajas GWT face example application</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            org/geomajas/example/gwt/samples/applicationContext.xml
			org/geomajas/example/gwt/samples/mapwidget/mapOsm.xml
			org/geomajas/example/gwt/samples/mapwidget/layerOsm.xml
			org/geomajas/example/gwt/samples/mapwidget/mapWms.xml
			org/geomajas/example/gwt/samples/mapwidget/layerWmsBluemarble.xml
			org/geomajas/example/gwt/samples/mapwidget/layerBeans.xml
			org/geomajas/example/gwt/samples/mapwidget/layerBeansLonLat.xml
			org/geomajas/example/gwt/samples/mapwidget/layerBeansMercator.xml
			org/geomajas/example/gwt/samples/mapwidget/layerGeoTools.xml
			org/geomajas/example/gwt/samples/mapwidget/layerGoogle.xml
			org/geomajas/example/gwt/samples/mapwidget/layerGoogleSat.xml
			org/geomajas/example/gwt/samples/mapwidget/mapBeans.xml
			org/geomajas/example/gwt/samples/mapwidget/mapCrs.xml
			org/geomajas/example/gwt/samples/mapwidget/mapGeoTools.xml
			org/geomajas/example/gwt/samples/mapwidget/mapGoogle.xml
			org/geomajas/example/gwt/samples/mapwidget/mapGoogleSat.xml
			org/geomajas/example/gwt/samples/mapWidget/overviewMapOsm.xml
			org/geomajas/example/gwt/samples/security/security.xml
			org/geomajas/example/gwt/samples/security/mapWmsToolbar.xml
			org/geomajas/example/gwt/samples/toolbar/mapOsmNavigationToolbar.xml
			org/geomajas/example/gwt/samples/toolbar/mapDuisburgSelection.xml
			org/geomajas/example/gwt/samples/toolbar/mapOsmMeasure.xml
			org/geomajas/example/gwt/samples/toolbar/mapOsmFeatureInfo.xml
			org/geomajas/example/gwt/samples/toolbar/mapOsmResolutions.xml
			org/geomajas/example/gwt/samples/shapeinmem/mapDuisburg.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerRoads.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerStructures.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerRivers.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerLakes.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerCountries.xml
			org/geomajas/example/gwt/samples/shapeinmem/layerProvinces.xml
			org/geomajas/example/gwt/samples/editing/layerCities.xml
			org/geomajas/example/gwt/samples/editing/mapEditPointLayer.xml
			org/geomajas/example/gwt/samples/editing/mapEditLineLayer.xml
			org/geomajas/example/gwt/samples/editing/mapEditPolygonLayer.xml
			org/geomajas/example/gwt/samples/layertree/mapLegend.xml
			org/geomajas/example/gwt/samples/grid/mapFeatureListGrid.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>preloadClasses</param-name>
        <param-value>
			org.geomajas.command.general.LogCommand
			org.geomajas.spring.GeomajasBeanNameGenerator
			org.hibernate.validator.engine.ValidatorImpl
			org.geomajas.plugin.springsecurity.command.dto.LoginRequest
			org.geotools.data.shapefile.ShapefileDataStoreFactory
        </param-value>
    </context-param>

	<listener>
 		<listener-class>org.geomajas.servlet.PrepareScanningContextListener</listener-class>
	</listener>

	<listener>
 		<listener-class>org.geomajas.servlet.GeomajasContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<servlet-class>org.geomajas.gwt.server.GeomajasServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<url-pattern>/org.geomajas.example.gwt.GeomajasSamples/geomajasService</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>samples.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>

