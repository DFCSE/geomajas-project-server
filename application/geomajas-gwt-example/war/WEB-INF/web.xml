<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>Geomajas GWT face example application</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            org/geomajas/example/gwt/clientcfg/applicationContext.xml

            <!-- Server side raster layers -->
			org/geomajas/example/gwt/servercfg/raster/layerOsm.xml
			org/geomajas/example/gwt/servercfg/raster/layerWmsBluemarble.xml
			org/geomajas/example/gwt/servercfg/raster/layerGoogle.xml
			org/geomajas/example/gwt/servercfg/raster/layerGoogleSat.xml

            <!-- Server side vector layers -->
			org/geomajas/example/gwt/servercfg/vector/layerBeans.xml
			org/geomajas/example/gwt/servercfg/vector/layerBeansLonLat.xml
			org/geomajas/example/gwt/servercfg/vector/layerBeansMercator.xml
			org/geomajas/example/gwt/servercfg/vector/layerCities.xml
			org/geomajas/example/gwt/servercfg/vector/layerRoads.xml
			org/geomajas/example/gwt/servercfg/vector/layerStructures.xml
			org/geomajas/example/gwt/servercfg/vector/layerRivers.xml
			org/geomajas/example/gwt/servercfg/vector/layerLakes.xml
			org/geomajas/example/gwt/servercfg/vector/layerCountries.xml
			org/geomajas/example/gwt/servercfg/vector/layerProvinces.xml

            <!-- Map Configurations -->
			org/geomajas/example/gwt/clientcfg/layer/mapOsm.xml
			org/geomajas/example/gwt/clientcfg/layer/mapWms.xml
			org/geomajas/example/gwt/clientcfg/layer/mapGeoTools.xml
			org/geomajas/example/gwt/clientcfg/layer/mapGoogle.xml
			org/geomajas/example/gwt/clientcfg/layer/mapGoogleSat.xml

			org/geomajas/example/gwt/clientcfg/mapwidget/mapCrs.xml
			org/geomajas/example/gwt/clientcfg/mapwidget/overviewMapOsm.xml

			org/geomajas/example/gwt/clientcfg/editing/mapEditPointLayer.xml
			org/geomajas/example/gwt/clientcfg/editing/mapEditLineLayer.xml
			org/geomajas/example/gwt/clientcfg/editing/mapEditPolygonLayer.xml

			org/geomajas/example/gwt/clientcfg/layertree/mapLegend.xml

			org/geomajas/example/gwt/clientcfg/attribute/mapBeans.xml
			org/geomajas/example/gwt/clientcfg/attribute/mapFeatureListGrid.xml

			org/geomajas/example/gwt/clientcfg/toolbar/mapNavigation.xml
			org/geomajas/example/gwt/clientcfg/toolbar/mapSelection.xml
			org/geomajas/example/gwt/clientcfg/toolbar/mapMeasure.xml
			org/geomajas/example/gwt/clientcfg/toolbar/mapFeatureInfo.xml
			org/geomajas/example/gwt/clientcfg/toolbar/mapResolutions.xml

			org/geomajas/example/gwt/clientcfg/security/security.xml
			org/geomajas/example/gwt/clientcfg/security/mapDuisburg.xml
			org/geomajas/example/gwt/clientcfg/security/mapToolbarSecurity.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>preloadClasses</param-name>
        <param-value>
			org.geomajas.command.general.LogCommand
			org.geomajas.spring.GeomajasBeanNameGenerator
			org.hibernate.validator.engine.ValidatorImpl
			org.geomajas.plugin.springsecurity.command.dto.LoginRequest
			org.geotools.data.shapefile.ShapefileDataStoreFactory
        </param-value>
    </context-param>

	<listener>
 		<listener-class>org.geomajas.servlet.PrepareScanningContextListener</listener-class>
	</listener>

	<listener>
 		<listener-class>org.geomajas.servlet.GeomajasContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<servlet-class>org.geomajas.gwt.server.GeomajasServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GeomajasServiceServlet</servlet-name>
		<url-pattern>/org.geomajas.example.gwt.GeomajasSamples/geomajasService</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>samples.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>

