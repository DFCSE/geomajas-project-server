<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.name {
			color: #225414;
			font-size: 18px;
			font-weight: bold;
			margin-bottom: 10px;
		}

		.description {
			color: #000000;
			border-bottom: 1px solid #225414;
			padding-bottom: 10px;
			margin-bottom: 10px;
		}

		.big {
			width: 100%;
			height: 100%;
			valign:top;
		}
	</ui:style>

	<g:VerticalPanel styleName='{style.big}' ui:field='layout'>

		<g:HTML>
			<div class='{style.name}' ui:field='titleElement'>Name</div>
			<div class='{style.description}' ui:field='descriptionElement'>Description</div>
		</g:HTML>

		<g:ScrollPanel ui:field='contentWidget' />

	</g:VerticalPanel>

</ui:UiBinder> 